{
  "extends": [
    "../../../../../.eslintrc.json"
  ],
  "overrides": [
    {  
      "files": ["*.ts"],
      "rules": {
        "@angular-eslint/component-selector": [
          "error",
          {
            "prefix": "ntis",
            "style": "kebab-case",
            "type": "element"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "prefix": "ntis",
            "style": "camelCase",
            "type": "attribute"
          }
        ]
      }
   }
  ]
}